<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2" >

    <LinearLayout
        android:id="@+id/menu_principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/mp_opcion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="@string/mp_opcion1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#B80000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/mp_opcion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mp_opcion3"
        android:layout_below="@+id/mp_opcion1"
        android:layout_marginTop="42dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="@string/mp_opcion2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#B80000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/mp_opcion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mp_opcion2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="@string/mp_opcion3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#B80000"
        android:textSize="40sp" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mp_opcion3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="G+ Sign Out"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mp_opcion3"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:visibility="gone" >
        </com.google.android.gms.common.SignInButton>
    </LinearLayout>

</RelativeLayout>